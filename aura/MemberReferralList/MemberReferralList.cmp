<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" 
                controller="MemberReferralListController" >
    
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="fields" type="List" default="[
                                                       {'value':'Name', 'label':'Name'},
                                                       {'value':'FieloPLT__Email__c', 'label':'E-mail'},
                                                       {'value':'FieloPLT__Program__r.Name', 'label':'Program'},
                                                       ]"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <!-- BODY -->
    <lightning:buttonMenu class="slds-grid slds-grid_align-end" alternativeText="Settings" 
                          onselect="{! c.handleMenuSelect }">
        <aura:iteration items="{!v.fields}" var="i" >
            <lightning:menuItem class="slds-grid slds-grid_align-end" label="{!i.label}" value="{!i.value}" />
        </aura:iteration>
    </lightning:buttonMenu>
    <br/>
    <lightning:datatable columns="{!v.columns }"
                         data="{! v.data }"
                         keyField="id"
                         />
    
    
    
</aura:component>